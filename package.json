{
  "name": "converter",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.converter.app",
    "productName": "File Converter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "asarUnpack": [
      "node_modules/@ffmpeg-installer/**"
    ],
    "win": {
      "target": [
        "dir"
      ],
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "7zip-bin": "^5.2.0",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "docx": "^8.5.0",
    "epub2": "^3.0.2",
    "fluent-ffmpeg": "^2.1.3",
    "mammoth": "^1.11.0",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdf-to-png-converter": "^3.11.0",
    "pdfkit": "^0.17.2",
    "sharp": "^0.34.5",
    "tesseract.js": "^7.0.0"
  }
}
